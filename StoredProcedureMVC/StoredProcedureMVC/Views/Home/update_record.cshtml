
@{
    ViewBag.Title = "update_record";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>update_record</title>
    <!--<link href="~/bootstrap.min.css" rel="stylesheet" />-->
</head>
<body>
    <div>
        @{
            foreach (System.Data.DataRow dr in ViewBag.emprecord.Rows)
            {
                <form method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Name</label>

                        <div class="col-sm-9">
                            <input type="text" name="Name" value="@dr["Name"]" class="col-xs-10 col-sm-8" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Address</label>

                        <div class="col-sm-9">
                            <input type="password" name="Address" value="@dr["Address"]" class="col-xs-10 col-sm-8" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">City</label>

                        <div class="col-sm-9">
                            <input type="text" name="City" value="@dr["City"]" class="col-xs-10 col-sm-8" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Pin Code</label>

                        <div class="col-sm-9">
                            <input type="text" name="pin" value="@dr["Pin_Code"]" class="col-xs-10 col-sm-8" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right">Designation</label>

                        <div class="col-sm-9">
                            <input type="text" name="designation" value="@dr["Designation"]" class="col-xs-10 col-sm-8" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            }
        }
    </div>
    
</body>
</html>
