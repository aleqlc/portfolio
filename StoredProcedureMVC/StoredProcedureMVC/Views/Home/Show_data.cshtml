@{
    ViewBag.Title = "Show_data";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show_data</title>
    <!--<link href="~/bootstrap.min.css" rel="stylesheet" />-->
</head>
<body>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Emp_id</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Pin_Code</th>
                    <th>Designation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (System.Data.DataRow dr in ViewBag.emp.Rows)
                    {

                        <tr>
                            <td>@dr["Emp_id"]</td>
                            <td>@dr["Name"]</td>
                            <td>@dr["Address"]</td>
                            <td>@dr["City"]</td>
                            <td>@dr["Pin_code"]</td>
                            <td>@dr["Designation"]</td>
                            <td>
                                <a href="/Home/update_record?id=@dr["Emp_id"]">Update</a>
                                <a href="/Home/Delete_record?id=@dr["Emp_id"]">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @{ 
        if (TempData["msg"] != null)
        {
            <script>alert('@TempData["msg"]')</script>
        }
    }
</body>
</html>